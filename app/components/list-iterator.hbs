{{#if @occlusion}}
  <VerticalCollection
     @items={{@locations}}
     @estimateHeight={{31}}
     @staticHeight={{false}}
     @key="attributes.wikiId"
     @idForFirstItem={{@selectedLocationId}}
     @bufferSize={{5}}
     as |location|
  >
    {{yield location}}
  </VerticalCollection>
{{else}}
  {{#each @locations as |location|}}
    {{yield location}}
  {{/each}}
{{/if}}